{
  "name": "nodejs-express-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate application for Node.js TS, and Express server.",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "build-local": "npm run pre-build && tsc -p tsconfig.prod.json",
    "clear": "rimraf dist",
    "coverage": "jest --coverage",
    "dev": "NODE_ENV=local && nodemon dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "nyc": "nyc npm run test",
    "pretty": "npx pretty-quick --staged",
    "pre-build": "npm run clear && npm run pretty",
    "pre-commit": "npm run lint-fix && npm run pretty",
    "pre-push": "npm run lint",
    "watch": "tsc -w -p ./tsconfig.dev.json",
    "test": "NODE_ENV=test && jest"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "boilerplate",
    "jest"
  ],
  "author": "sa-webb",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "husky": "^8.0.0",
    "jest": "^27.4.7",
    "jest-config": "^29.0.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "volta": {
    "node": "16.13.1"
  }
}
