{
  "name": "nodejs-express-boilerplate",
  "version": "0.1.1",
  "description": "A boilerplate application for Node.js TS, and Express server.",
  "main": "index.js",
  "scripts": {
    "build": "npm run pre-build tsc -p tsconfig.prod.json",
    "clear": "rimraf dist",
    "dev": "nodemon -r dotenv/config dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint --fix src/**/*.ts",
    "pretty": "npx pretty-quick --staged",
    "pre-build": "npm run clear && npm run pretty",
    "pre-commit": "npm run lint-fix && npm run pretty",
    "pre-push": "npm run lint",
    "watch": "tsc -w -p ./tsconfig.dev.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "boilerplate",
    "jest"
  ],
  "author": "sa-webb",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "husky": "^7.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  },
  "volta": {
    "node": "16.13.1"
  }
}
